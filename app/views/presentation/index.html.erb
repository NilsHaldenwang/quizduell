<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Fachbereichsduell" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%# stylesheet_link_tag "application", :media => "all" %>
    <%# stylesheet_link_tag "normalize" %>

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the top of the document so jquery works in templates... -->
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "presentation" %>


    <style type="text/css">
      body {
        /* background-image: url('<%= asset_path "bg-mesh.png" %>'); */
        /* font-family: 'unibody8'; */
        font-size: 30px;
        color: rgb(140, 255, 0);
        margin: 0px;
        padding: 0px;
      }

      table {
        font-size: 25px;
      }

      .container {
        width: 1021px;
        height: 744px;
        margin: 0px;
        padding: 0px;
      }

      .footer {
        margin-bottom: 10px;
        /* background-image: url('<%= asset_path "bg-mesh-green.png" %>'); */
        color: black;
        font-size: 45px;
      }

      .footer-line {
        /* background-image: url('<%= asset_path "bg-mesh-green.png" %>'); */
        height: 5px;
      }

      .footer-container {
        position: absolute;
        left: 0;
        top: 0px; /* 673 */
        width: 1021px;
      }

      #ajax-container {
        position: absolute;
        left: 0;
        top: 86px;
        width: 1021px;
      }


    </style>
  </head>
  <body>
    <div class="container">

      <div class="footer-container">

        <table cellspacing="0" style="width: 100%;" class="footer">
          <tr>
            <td style="width: 250px;"><span id="team_score"></span></td>
            <td style="text-align: center;"><span id="round_number"></span></td>
            <td style="text-align: right; width: 250px;"><span id="audience_score">&nbsp;</span></td>
          </tr>
        </table>

        <div class="footer-line">
        </div>

      </div>

      <div id="ajax-container">
      </div>

    </div>

  </body>
</html>
